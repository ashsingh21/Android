<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true">

    <EditText
            android:id="@+id/text_to_send"
            android:layout_width="254dp"
            android:layout_height="42dp"
            android:ems="15"
            android:hint="@string/message_hint"
            android:inputType="textPersonName"
            android:layout_alignBottom="@+id/send_button"
            android:layout_alignStart="@+id/message_recycle_view" />

        <Button
            android:id="@+id/send_button"
            android:layout_width="80dp"
            android:layout_height="41dp"
            android:backgroundTint="@color/startChatColor"
            android:onClick="send"
            android:radius="30dp"
            android:text="@string/send_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <android.support.v7.widget.RecyclerView
            android:layout_above="@+id/text_to_send"
            android:fitsSystemWindows="true"
            android:id="@+id/message_recycle_view"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp" />

    </RelativeLayout>


